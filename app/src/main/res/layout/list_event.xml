<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/toprelatif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:id="@+id/titletop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgevent"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/circleimg"
                android:src="@drawable/profil" />

            <TextView
                android:id="@+id/titleevent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:text="Title berita terbaru"
                android:textColor="@color/titleEvent"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/contentevent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/titletop"
            android:text="Time berita terbaru"
            android:textColor="@color/contenEvent" />
    </RelativeLayout>
</RelativeLayout>